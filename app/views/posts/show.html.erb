 <!-- Page Header -->
    <header class="masthead" style="background-image: url(<%= @post.image%>)">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%= @post.title %></h1>
              <span class="meta">Posted by
                <a href="#">David "Dizzy" Kim</a>
               <%=distance_of_time_in_words(@post.created_at, Time.now)%> ago</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <h2><strong><%= @post.created_at.strftime("%B %d, %Y") %></strong></h2>
            </br>
            <p><%= @post.content %><p>
            </br>
            <%=link_to :back do%>
            <button class='btn-sm'>Back to Post Index</button>
            <%end%>
          </div>
        </div>
      </div>
    </article>

    <hr>